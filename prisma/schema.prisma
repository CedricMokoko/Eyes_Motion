generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User{
  id Int @id @default(autoincrement())
  name String? 
  surname String?
  email String @unique
  password String
  movieLikes MovieLike[] //Relazione one-to-many con MovieLike
  serieLikes SerieLike[] //Relazione one-to-many con MovieLike
}

model MovieLike {
  id      Int     @id @default(autoincrement())
  userId  Int
  movieId String?
  user User? @relation(fields: [userId], references: [id])
  @@unique([userId, movieId], name: "idx_userId_movieId") // Vincolo unico per impedire più "like" dallo stesso utente per lo stesso film
}
model SerieLike {
  id      Int     @id @default(autoincrement())
  userId  Int
  serieId String?
  user User? @relation(fields: [userId], references: [id])
  @@unique([userId, serieId], name: "idx_userId_serieId") // Vincolo unico per impedire più "like" dallo stesso utente per la stessa serie
}